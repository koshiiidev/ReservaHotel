@using Microsoft.AspNetCore.Identity
@using ReservaHotel.Areas.Identity.Data

@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

<div class="login-navigation">
    @if (SignInManager.IsSignedIn(User))
    {
        <span class="navbar-link">
            Hello @UserManager.GetUserName(User)!
        </span>
        <!--<a class="navbar-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            Mi Cuenta
        </a>-->
        <form id="logoutForm" class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="navbar-link btn btn-link">Logout</button>
        </form>
    }
    else
    {
        <a class="navbar-link" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
        <a class="navbar-link" asp-area="Identity" asp-page="/Account/Login">Iniciar Sesión</a>
    }
</div>